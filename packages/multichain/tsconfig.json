{
    "compilerOptions": {
        "outDir": "lib/",
        "lib": [
            "es2018"
        ],
        "typeRoots": [
          "node_modules/@0x/typescript-typings/types",
          "node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "composite": true,
        "target": "es2018"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}